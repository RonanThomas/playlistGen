%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Define macro to easily include numbered tabular
% Usage:
%	\tableau{|l|p{4cm}|c|}{\linewidth}{Caption}{tab:Label}{
%	\hline
%	A & B & C \\ \hline
%	}
%
% After what you can reference the tabular by:
%	\ref{tab:Label}
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\tableau}[5]{
% #1 = structure string
% #2 = width
% #3 = caption
% #4 = label
% #5 = content
	\begin{table}
		\begin{tabularx}{#2}{#1}
		#5
		\end{tabularx}
		\caption{#3}
		\label{#4}
	\end{table}
}

