%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Define macro to easily include image without caption
% Usage:
%	\imageWOCaption{file.png}{width=13cm}{fig:ReferenceLabel}
%
% After what you can reference the image by:
%	\ref{fig:ReferenceLabel}
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\imageWOCaption}[4][\linewidth]{%
% #1 = minipage width
% #2 = file path
% #3 = includegraphics options
% #4 = reference label
    \begin{figure}[h]
        \centering
            \begin{minipage}[c]{#1}
                \centering
                \includegraphics[#3]{#2}
                \label{#4}
            \end{minipage}
    \end{figure}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Define macro to easily include image w/wo box around
% Usage:
%	\image{file.png}{width=13cm}{Caption}{fig:ReferenceLabel}
%	\imageBoxed{file.png}{width=13cm}{Caption}{fig:ReferenceLabel}
%
% After what you can reference the image by:
%	\ref{fig:ReferenceLabel}
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\image}[5][\linewidth]{%
% #1 = minipage width
% #2 = file path
% #3 = includegraphics options
% #4 = caption text
% #5 = reference label
    \begin{figure}[h]
        \centering
            \begin{minipage}[c]{#1}
                \centering
                \includegraphics[#3]{#2}
                \caption{#4}
                \label{#5}
            \end{minipage}
    \end{figure}
}
\newcommand{\imageBoxed}[5][\textwidth]{%
% #1 = minipage width
% #2 = file path
% #3 = includegraphics options
% #4 = caption text
% #5 = reference label
    \begin{figure}[h]
        \centering
        \fbox{
            \begin{minipage}[c]{#1}
                \centering
                \includegraphics[#3]{#2}
                \caption{#4}
                \label{#5}
            \end{minipage}
        }
    \end{figure}
}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Define macro to easily include box
% Usage:
%	\textboxed{\linewidth}{TITLE}{TEXT}
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% #1 = minipage width
% #2 = title
% #3 = text
\newcommand{\textboxed}[3]{
	\fbox{
		\begin{minipage}[c]{#1}
			\textbf{#2 :} #3
		\end{minipage}
	}
}

